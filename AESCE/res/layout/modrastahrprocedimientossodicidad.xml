<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#FFFFFF">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="match_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/textView1" android:layout_height="wrap_content"
			android:background="#7D4312" android:textColor="#FFFFFF" android:layout_width="match_parent"
			android:gravity="center" android:height="40sp" android:textSize="15sp" android:text="Hoja de Procedimientos (Sodicidad)"></TextView>
	</LinearLayout>
	<ScrollView android:id="@+id/scrollView1"
		android:layout_marginTop="10sp" android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout android:id="@+id/linearLayout4"
			android:layout_width="match_parent" android:layout_height="match_parent">
			<TableLayout android:layout_width="match_parent"
				android:id="@+id/tableLayout1" android:layout_height="match_parent"
				android:layout_marginLeft="5sp" android:layout_marginRight="10sp">
				<TableRow android:layout_width="wrap_content" android:id="@+id/tableRow3"
					android:layout_height="wrap_content">
					<LinearLayout android:layout_height="wrap_content"
						android:id="@+id/linearLayout5" android:layout_width="match_parent">
						<Button android:textSize="20sp" android:layout_width="wrap_content"
							android:text="@string/TextProductorBtnRegresar"
							android:layout_height="wrap_content" android:id="@+id/IdModRastaHrProcedimientosSodicidadBtnRegresar" android:onClick="OnModRastaHrProcedimientosSodicidadBtnRegresar_Click"></Button>
						<Button android:id="@+id/button2" android:textSize="20sp"
							android:layout_width="wrap_content" android:text="@string/TEXTproductorBtnSalir"
							android:layout_height="wrap_content"></Button>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_width="wrap_content" android:id="@+id/tableRow1"
					android:layout_height="wrap_content">
					<LinearLayout android:layout_height="wrap_content"
						android:id="@+id/linearLayout3" android:layout_marginTop="20sp"
						android:orientation="vertical" android:layout_width="fill_parent">
						<TextView android:width="300sp" android:gravity="center" android:background="#dca76d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView2" android:textColor="#704312" android:height="30sp" android:text="sodicidad"></TextView>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_width="wrap_content" android:id="@+id/TableRow01" android:layout_height="wrap_content" android:layout_marginTop="10sp">
					<LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_height="wrap_content">
						<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextView01" android:layout_marginRight="5sp" android:textColor="#000000" android:textSize="12sp" android:text="Encuentra costras negras en el suelo (Ver numeral 15)"></TextView>
						<RadioGroup android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg1">
							<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:textColor="#000000" android:text="Si" android:layout_marginRight="10sp" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg1SI"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="No" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg1NO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow02">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout02" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="12sp" android:id="@+id/TextView02" android:text="El drenaje es lento o muy lento (Hoja de Respuestas 2)"></TextView>
						<RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg2">
							<RadioButton android:layout_marginRight="10sp" android:checked="true" android:layout_width="wrap_content" android:text="Si" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg2SI"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg2NO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow03">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout05" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="12sp" android:id="@+id/TextView03" android:text="El PH es mayor a 8 (Ver numeral 4)"></TextView>
						<RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg3">
							<RadioButton android:layout_marginRight="10sp" android:checked="true" android:layout_width="wrap_content" android:text="Si" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg3SI"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg3NO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow04">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout06" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:id="@+id/TextView04" android:text="...Y además coincide con 2 o mas de las siguientes condiciones su suelo es sódico" android:textColor="#704312" android:gravity="center"></TextView>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow06">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout08" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="12sp" android:id="@+id/TextView06" android:text="El suelo es blando o friable (Ver numeral 3)"></TextView>
						<RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg4">
							<RadioButton android:layout_marginRight="10sp" android:checked="true" android:layout_width="wrap_content" android:text="Si" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg4SI"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg4NO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow07">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout09" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="12sp" android:id="@+id/TextView07" android:text="La estructura es prismática o columnar (Ver numeral 9)"></TextView>
						<RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg5">
							<RadioButton android:layout_marginRight="10sp" android:checked="true" android:layout_width="wrap_content" android:text="Si" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg5SI"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg5NO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow09">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout10" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:id="@+id/TextView08" android:text="Nivel de sodicidad" android:textColor="#7D4312"></TextView>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow10">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout11" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="12sp" android:id="@+id/TextView09" android:text="Encuentra costras negras en el suelo (Ver numeral 15)"></TextView>
						<RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg6">
							<RadioButton android:layout_marginRight="10sp" android:checked="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="Mucho" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg6MUCHO"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="Poco" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg6POCO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_marginTop="10sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow12">
					<LinearLayout android:layout_height="wrap_content" android:id="@+id/LinearLayout13" android:orientation="vertical" android:layout_width="wrap_content">
						<TextView android:layout_marginRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="12sp" android:id="@+id/TextView11" android:text="Observa plantas con diferencias en el crecimiento, secas o de baja producción (Ver numeral 19)"></TextView>
						<RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdgPreg7">
							<RadioButton android:layout_marginRight="10sp" android:checked="true" android:layout_width="wrap_content" android:text="Mucho" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg7MUCHO"></RadioButton>
							<RadioButton android:layout_width="wrap_content" android:text="Poco" android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/IdModRastaHrProcedimientosSodicidadRdoPreg7POCO"></RadioButton>
						</RadioGroup>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_width="wrap_content" android:id="@+id/TableRow08" android:layout_marginTop="10sp" android:layout_height="wrap_content">
					<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/LinearLayout03" android:orientation="vertical">
						<Button android:layout_width="wrap_content" android:textSize="20sp" android:layout_height="wrap_content" android:text="Registrar" android:id="@+id/IdModRastaHrProcedimientosSodicidadBtnRegistrar" android:onClick="OnModRastaHrProcedimientosSodicidadBtnRegistrar_Click"></Button>
					</LinearLayout>
				</TableRow>
				<TableRow android:layout_width="wrap_content" android:id="@+id/tableRow2" android:layout_marginRight="10sp" android:layout_height="wrap_content">
					<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/LinearLayout04" android:layout_marginTop="30sp" android:layout_marginLeft="5sp" android:layout_marginBottom="10sp" android:layout_marginRight="10sp">
						<ImageView android:layout_width="wrap_content" android:layout_marginLeft="10sp" android:id="@+id/imageView2" android:src="@drawable/asohofrucol" android:layout_height="wrap_content"></ImageView>
						<ImageView android:layout_width="wrap_content" android:layout_marginLeft="10sp" android:id="@+id/imageView3" android:src="@drawable/um" android:layout_height="wrap_content"></ImageView>
						<ImageView android:layout_width="wrap_content" android:layout_marginLeft="10sp" android:id="@+id/imageView4" android:src="@drawable/fondo" android:layout_height="wrap_content"></ImageView>
					</LinearLayout>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
